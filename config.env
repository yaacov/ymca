# LLM Configuration
MODEL_NAME=ibm-granite/granite-3.3-8b-instruct
DEVICE=auto
MODEL_CACHE_DIR=models

# Generation Parameters
MAX_LENGTH=512
TEMPERATURE=0.7
TOP_P=0.9
DO_SAMPLE=true

# CUDA Optimizations
USE_4BIT_QUANTIZATION=true
CUDA_MEMORY_FRACTION=0.9
USE_GRADIENT_CHECKPOINTING=true
USE_TORCH_COMPILE=true
USE_FLASH_ATTENTION=true

# Intel CPU Optimizations
USE_INTEL_QUANTIZATION=true
INTEL_CALIBRATION_SIZE=100

# Apple Silicon (MPS) Optimizations
MPS_MEMORY_OPTIMIZATION=true
MPS_MEMORY_FRACTION=0.8

# Chat Configuration
CHAT_SYSTEM_PROMPT=You are a helpful assistant.
CHAT_HISTORY_WINDOW=5
CHAT_MAX_HISTORY_TOKENS=4096

# Logging Configuration
LOG_LEVEL=INFO

# Debug Configuration
DEBUG_SAVE_PROMPTS=true
DEBUG_PROMPTS_DIR=./debug/prompts

# Web Browsing Configuration
WEB_MAX_REQUESTS_PER_SECOND=0.5
WEB_MAX_REQUESTS_PER_MINUTE=20
WEB_DEFAULT_SEARCH_ENGINE=duckduckgo
WEB_MAX_SEARCH_RESULTS=10
WEB_READ_PAGES_BY_DEFAULT=true

# Memory Configuration
MEMORY_DB_PATH=memory.db
MEMORY_EMBEDDING_MODEL=ibm-granite/granite-embedding-english-r2
MEMORY_QUESTIONS_PER_MEMORY=2
MEMORY_MAX_SEARCH_RESULTS=5
MEMORY_SIMILARITY_THRESHOLD=0.1
MEMORY_MAX_CHUNK_SIZE=1000
MEMORY_CHUNK_OVERLAP=200

# Filesystem Configuration
FILESYSTEM_BASE_DIR=./data
FILESYSTEM_MAX_FILE_SIZE_MB=10
FILESYSTEM_ALLOWED_EXTENSIONS=.txt,.md,.json,.csv,.log,.py,.js,.html,.css,.xml,.yaml,.yml
FILESYSTEM_ENABLE_SUBDIRECTORIES=true

# Planning and Multi-Step Task Configuration
PLANNING_ENABLE_WEB_TOOLS=true
PLANNING_ENABLE_FILESYSTEM_TOOLS=true
PLANNING_ENABLE_MEMORY_TOOLS=true
PLANNING_MAX_STEPS=20
PLANNING_MAX_ITERATIONS=50
PLANNING_ENABLE_PARALLEL_EXECUTION=false
PLANNING_PERSISTENCE_DIR=./data/plans
PLANNING_DEFAULT_MODE=auto
